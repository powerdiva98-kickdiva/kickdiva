{
  "moduleName": "Channel Management Module",
  "version": "1.0.0",
  "description": "Module for managing bot channels with proper verification for bot accounts",
  "author": "powerdiva98-kickdiva",
  "config": {
    "enableChannelManagement": true,
    "verifyBotAccounts": true,
    "allowedBotRoles": ["administrator", "moderator", "bot"]
  },
  "features": {
    "channelManagement": {
      "enabled": true,
      "createChannel": {
        "enabled": true,
        "requireBotVerification": true,
        "requireAdminPermission": true
      },
      "deleteChannel": {
        "enabled": true,
        "requireBotVerification": true,
        "requireAdminPermission": true
      },
      "updateChannelSettings": {
        "enabled": true,
        "requireBotVerification": true,
        "requireModeratorPermission": true
      }
    },
    "botVerification": {
      "enabled": true,
      "verificationMethods": [
        "checkBotToken",
        "validateBotPermissions",
        "verifyBotAccount",
        "checkBotRateLimit"
      ],
      "strictMode": true,
      "verificationTimeout": 5000
    }
  },
  "permissions": {
    "channelCreation": {
      "requireAdmin": true,
      "requireVerifiedBot": true,
      "minBotAge": 86400000,
      "allowedUsers": []
    },
    "channelDeletion": {
      "requireAdmin": true,
      "requireVerifiedBot": true,
      "requireConfirmation": true,
      "confirmationTimeout": 30000
    },
    "channelUpdate": {
      "requireModerator": true,
      "requireVerifiedBot": true,
      "allowedSettings": [
        "name",
        "description",
        "topic",
        "nsfw",
        "slowmode",
        "permissions"
      ]
    }
  },
  "verification": {
    "botAccountCheck": {
      "enabled": true,
      "checkBotFlag": true,
      "validateToken": true,
      "checkWebhooks": true
    },
    "permissions": {
      "sendMessages": true,
      "manageChannels": true,
      "manageMessages": true,
      "manageRoles": true,
      "viewAuditLog": true
    },
    "rateLimit": {
      "enabled": true,
      "maxRequestsPerSecond": 10,
      "maxRequestsPerMinute": 300,
      "cooldownPeriod": 1000
    }
  },
  "errorHandling": {
    "invalidBotAccount": {
      "code": "BOT_VERIFICATION_FAILED",
      "message": "The provided account is not a verified bot account",
      "severity": "ERROR"
    },
    "insufficientPermissions": {
      "code": "INSUFFICIENT_PERMISSIONS",
      "message": "The bot does not have sufficient permissions to perform this action",
      "severity": "ERROR"
    },
    "channelAlreadyExists": {
      "code": "CHANNEL_ALREADY_EXISTS",
      "message": "A channel with this name already exists",
      "severity": "WARNING"
    },
    "channelNotFound": {
      "code": "CHANNEL_NOT_FOUND",
      "message": "The specified channel was not found",
      "severity": "ERROR"
    }
  },
  "logging": {
    "enabled": true,
    "logLevel": "INFO",
    "logChannelManagement": true,
    "logBotVerification": true,
    "logPermissionChecks": true,
    "logFile": "logs/mod1.log"
  },
  "commands": {
    "createChannel": {
      "name": "!createchannel",
      "description": "Create a new managed channel",
      "syntax": "!createchannel <name> [description]",
      "requireBotVerification": true,
      "requireAdminRole": true
    },
    "deleteChannel": {
      "name": "!deletechannel",
      "description": "Delete a managed channel",
      "syntax": "!deletechannel <channelId>",
      "requireBotVerification": true,
      "requireAdminRole": true
    },
    "updateChannel": {
      "name": "!updatechannel",
      "description": "Update channel settings",
      "syntax": "!updatechannel <channelId> <setting> <value>",
      "requireBotVerification": true,
      "requireModeratorRole": true
    },
    "verifyBot": {
      "name": "!verifybot",
      "description": "Verify bot account status",
      "syntax": "!verifybot [botId]",
      "requireBotVerification": true
    }
  }
}
